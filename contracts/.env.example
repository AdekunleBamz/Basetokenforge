# Base Token Forge - Contracts Environment Variables
# Copy this file to .env and fill in your values

# Deployer Private Key (Required for deployment)
# WARNING: Never commit your private key!
PRIVATE_KEY=your_private_key_here

# Fee Recipient Address (Required)
# Address that receives the token creation fees
FEE_RECIPIENT=0xYourAddressHere

# Base RPC URLs
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan API Key (Required for contract verification)
# Get yours at https://basescan.org/myapikey
BASESCAN_API_KEY=your_basescan_api_key
